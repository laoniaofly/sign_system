@import 'weui.wxss';

/**app.wxss**/
page{
  background-color: #F8F8F8;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0;
  background-color: #fff;
  box-sizing: border-box;
}

.cell{
  position: relative;
  background-color: #fff;
  font-size: 17px;
}

.loadmore{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
}

.weui-loadmore{
  width: 50%;
  height: 20%;
  background-color: #000;
  z-index: 2000;
  opacity: 0.7;
  -webkit-border-radius: 5%;
  -moz-border-radius: 5%;
  border-radius: 5%;
  margin-top: 40%;
}

.weui-loading,.weui-loadmore__tips{
  margin-top: 20%;
}

.weui-loadmore__tips{
  color: #fff;
}
